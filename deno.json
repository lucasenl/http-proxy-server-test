{
    "tasks": {
        "check": "deno check --unstable --remote ./deno/index.ts",
        "udd": "udd '*/*.ts' '*.ts'",
        "serve": " deno run -A --unstable ./deno/index.ts"
    },
    "lint": {
        "files": {
            "exclude": [
                "node_modules",
                ".yarn",
                "node",
                "test"
            ]
        }
    },
    "fmt": {
        "files": {
            "exclude": [
                "node_modules"
            ]
        },
        "options": {
            "indentWidth": 4,
            "singleQuote": false
        }
    }
}
